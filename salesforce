html:=====================================================================
<template>
    <lightning-card title="Client Due Diligence">
        <template if:true={metadataRecords}>
            <template for:each={metadataRecords} for:item="record">
                <div key={record.name}>
                    <lightning-input label="Name" value={record.name} disabled></lightning-input>
                    <lightning-input label="Fields API" value={record.fieldsAPI} disabled></lightning-input>
                    <lightning-input label="Field Help" value={record.fieldHelp} disabled></lightning-input>
                </div>
            </template>
        </template>
    </lightning-card>
</template>


JS: ===================================================================

import { LightningElement, wire } from 'lwc';
import getFieldsRecords from '@salesforce/apex/getFieldsRecords.getMetadataRecords';

export default class YourLWCComponent extends LightningElement {
    metadataRecords;

    @wire(getFieldsRecords)
    wiredMetadataRecords({ error, data }) {
        if (data) {
            this.metadataRecords = data;
        } else if (error) {
            console.error(error);
        }
    }
}


ApexClass: =====================

public with sharing class getFieldsRecords {
    public static List<clientDueDiligenceWrapper> getMetadataRecords() {
        List<clientDueDiligenceWrapper> metadataRecords = new List<clientDueDiligenceWrapper>();
        
        // Retrieve records from custom metadata
        List<clientDueDiligence__mdt> records = [SELECT Name, FieldsAPI, FieldHelp FROM clientDueDiligence__mdt];
        
        // Create wrapper instances for each record
        for (clientDueDiligence__mdt record : records) {
            clientDueDiligenceWrapper wrapper = new clientDueDiligenceWrapper();
            wrapper.name = record.Name;
            wrapper.fieldsAPI = record.FieldsAPI;
            wrapper.fieldHelp = record.FieldHelp;
            metadataRecords.add(wrapper);
        }
        
        return metadataRecords;
    }
    
    public class clientDueDiligenceWrapper {
        public String name;
        public String fieldsAPI;
        public String fieldHelp;
    }
}

