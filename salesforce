html:=====================================================================
<template>
    <lightning-card title="Client Due Diligence">
        <template if:true={metadataRecords}>
            <template for:each={metadataRecords} for:item="record">
                <div key={record.name}>
                    <lightning-input label="Name" value={record.name} disabled></lightning-input>
                    <lightning-input label="Fields API" value={record.fieldsAPI} disabled></lightning-input>
                    <lightning-input label="Field Help" value={record.fieldHelp} disabled></lightning-input>
                </div>
            </template>
        </template>
    </lightning-card>
</template>


JS: ===================================================================

import { LightningElement, wire } from 'lwc';
import getFieldsRecords from '@salesforce/apex/getFieldsRecords.getMetadataRecords';

export default class YourLWCComponent extends LightningElement {
    metadataRecords;

    @wire(getFieldsRecords)
    wiredMetadataRecords({ error, data }) {
        if (data) {
            this.metadataRecords = data;
        } else if (error) {
            console.error(error);
        }
    }
}


ApexClass: =====================

public class GetFieldsRecords {
  public class CustomMetadataWrapper {
    public String fieldsApi;
    public String helpText;

    public CustomMetadataWrapper(String fieldsApi, String helpText) {
      this.fieldsApi = fieldsApi;
      this.helpText = helpText;
    }
  }

  public static List<CustomMetadataWrapper> fetchClientDueDiligenceMetadata() {
    List<CustomMetadataWrapper> metadataList = new List<CustomMetadataWrapper>();

    // Query the custom metadata records
    List<ClientDueDiligence__mdt> records = [SELECT FieldsApi__c, HelpText__c FROM ClientDueDiligence__mdt];

    for (ClientDueDiligence__mdt record : records) {
      CustomMetadataWrapper metadata = new CustomMetadataWrapper(record.FieldsApi__c, record.HelpText__c);
      metadataList.add(metadata);
    }

    return metadataList;
  }
}
